<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> - QueueCTL</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="container">
        <h1>‚öôÔ∏è QueueCTL</h1>
        <ul>
          <li><a href="/">Dashboard</a></li>
          <li><a href="/jobs">Jobs</a></li>
          <li><a href="/dlq" class="active">DLQ</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="section-header">
        <h2>üíÄ Dead Letter Queue</h2>
        <button onclick="refreshDLQ()" class="btn">Refresh</button>
      </div>

      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Job ID</th>
              <th>Command</th>
              <th>Attempts</th>
              <th>Error</th>
              <th>Updated</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="dlq-table">
            <tr>
              <td colspan="6" style="text-align: center">Loading...</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <script>
      async function refreshDLQ() {
        try {
          const response = await fetch("/api/dlq");
          const data = await response.json();

          const tbody = document.getElementById("dlq-table");

          if (data.jobs.length === 0) {
            tbody.innerHTML =
              '<tr><td colspan="6" style="text-align: center; color: #666;">Dead Letter Queue is empty</td></tr>';
            return;
          }

          tbody.innerHTML = data.jobs
            .map(
              (job) => `
          <tr>
            <td><code>${job.id}</code></td>
            <td><code class="command">${escapeHtml(job.command)}</code></td>
            <td>${job.attempts}</td>
            <td><span class="error-text">${escapeHtml(job.error)}</span></td>
            <td>${new Date(job.updated_at).toLocaleString()}</td>
            <td>
              <button onclick="retryJob('${
                job.id
              }')" class="btn btn-sm btn-success">Retry</button>
              <button onclick="deleteJob('${
                job.id
              }')" class="btn btn-sm btn-danger">Delete</button>
            </td>
          </tr>
        `
            )
            .join("");
        } catch (error) {
          console.error("Error fetching DLQ:", error);
        }
      }

      async function retryJob(jobId) {
        try {
          await fetch(`/api/dlq/${jobId}/retry`, { method: "POST" });
          refreshDLQ();
          alert(`Job ${jobId} moved back to queue`);
        } catch (error) {
          alert("Error retrying job: " + error.message);
        }
      }

      async function deleteJob(jobId) {
        if (!confirm(`Delete job ${jobId} from DLQ?`)) return;

        try {
          await fetch(`/api/dlq/${jobId}`, { method: "DELETE" });
          refreshDLQ();
        } catch (error) {
          alert("Error deleting job: " + error.message);
        }
      }

      function escapeHtml(text) {
        const div = document.createElement("div");
        div.textContent = text;
        return div.innerHTML;
      }

      refreshDLQ();
      setInterval(refreshDLQ, 5000);
    </script>
  </body>
</html>
